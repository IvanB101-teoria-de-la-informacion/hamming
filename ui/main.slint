import { Button, HorizontalBox , ScrollView} from "std-widgets.slint";
import { ScrollPane } from "scroll_pane.slint";

struct ButtonData {
    text: string,
    operation: string,
}

export component MainWindow inherits Window {
    callback choose_file(string);

    in property <[ButtonData]> buttons: [
        {text: "Proteger", operation: "hamming"},
        {text: "Desproteger", operation: "dehamming"},
        {text: "Corromper", operation: "corrupt"},
        {text: "Comprimir", operation: "huffman"},
        {text: "Descomprimir", operation: "dehuffman"},
    ];

    VerticalLayout {
        HorizontalLayout { 
            for button[i] in buttons : Button {
                width: 150px;
                height: 30px;
                text: button.text;
                clicked => {
                    root.choose_file(button.operation);
                }
            }
        }

        VerticalLayout {
            ScrollView { 
                height: 300px;
                Text {
                    text: "Hello\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nBye";
                    wrap: word-wrap;
                }
            }
        }
    }
}
